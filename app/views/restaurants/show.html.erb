<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


<div class="banner" style="background: linear-gradient(-225deg, rgba(0,172,140,0.6) 50%, rgba(0,36,61,0.6) 50%)">
  <div class="title">
    <h1>Restaurant</h1>
    <p>Show my restaurant</p>
  </div>
</div>


<div class="text-right">
  <%= link_to "Liste des Restaurants", restaurants_path %>
</div>

<div class="text-center">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %> <%= @restaurant.phone_number%> <%= @restaurant.category %></p>
  <p>CrÃ©er le <%= @restaurant.created_at %></p>
  <p>Updater le <%= @restaurant.updated_at %></p>
</div>

<div class="text-center">
  <button type="button" class="btn btn-outline-success btn-lg">
    <%= link_to "add a review", new_restaurant_review_path(@restaurant) %>
  </button>
</div>

<div class="list_review">
  <% @restaurant.reviews.each do |review| %>
  <%= review.content %>
  <%= review.rating %>
  <% end %>
</div>
